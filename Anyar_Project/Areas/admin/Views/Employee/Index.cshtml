@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model List<Employee>

<div class="container">
    <div class="row">
        <div>
            <a class="btn btn-outline-success" asp-controller="Employee" asp-action="create">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Position</th>
                    <th scope="col">Title</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>
                            <img src="~/assets/img/team/@item.Image" />
                        </td>
                        <td>@item.Position</td>
                        <td>@item.Title</td>
                        <td>
                            <a class="btn btn-outline-info" asp-controller="Employee" asp-action="edit" asp-route-id=@item.Id>Edit</a>
                            <a class="btn btn-outline-danger" asp-controller="Employee" asp-action="delete" asp-route-id=@item.Id>Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>

